@model IEnumerable<qr_reader.Models.Article>

@{
    ViewData["Title"] = "Index";
    Layout = "_adminLayout";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ArticleNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Uplimit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lowlimit)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Article_type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uplimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lowlimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Article_type.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
